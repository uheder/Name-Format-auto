import sys

from PyQt6.QtCore import QSize, Qt
from PyQt6.QtWidgets import (QApplication, QMainWindow, QPushButton,)


class MainWindow(QMainWindow):

    "This class will set the initial windows with its buttons"
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Auto Rename for Excel Files")
        button = QPushButton("Renomear")

        self.setCentralWidget(button)

app = QApplication(sys.argv)

window = MainWindow()
window.show()
app.exec()
